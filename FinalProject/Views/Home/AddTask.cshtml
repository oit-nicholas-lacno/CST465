@{
    ViewData["Title"] = "Add Task";
}
@model TaskModel

<h1>@ViewData["Title"]</h1>

<form asp-action="AddTask" asp-controller="Home" method="POST">
    <div class="form-group row">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name (required)" maxlength="100"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" placeholder="Description (required)" maxlength="300"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group row">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" />
        <span asp-validation-for="DueDate"></span>
    </div>
    
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Add Task</button>
    </div>
</form>
