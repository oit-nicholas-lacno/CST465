@{
    ViewData["Title"] = "Home Page";
}
@model PlannerModel

<div class="p-3">
    @{
        if (Model.Tasks.Count == 0)
        {
            <p>No tasks found, click "Add Task" to add one</p>
        }
        else
        {
            <form asp-action="Index" asp-controller="Home" method="post">
                <div class="position-fixed end-0 top-50">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            <input type="hidden" asp-for="@Model.TimeZone"/>
            @for (int i = 0; i < Model.Tasks.Count; ++i)
            {
                <partial name="_TaskPartial" for="@Model.Tasks[i]" />
            }
            </form>
            <form asp-action="File" asp-controller="Home" method="get">
                <div class="position-fixed end-0 bottom-0">
                    <button type="submit" class="btn btn-secondary">Get File</button>
                </div>
            </form>
        }
    }
</div>
