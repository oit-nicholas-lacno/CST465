@model TaskModel

<div class="d-flex flex-column container-fluid mb-2">
    <div class="row">
        <div class="col-6">
            <h2 class="col-6">@Model.Name</h2>
        </div>
        <div class="col-6">
            <select asp-for="@Model.TaskStatus" class="form-select col-6">
                <option value="NotStarted">Not Started</option>
                <option value="Started">Started</option>
                <option value="Completed">Completed</option>
            </select>
        </div>
    </div>
    <div class="row">
        <p>@Model.Description</p>
    </div>
    <div class="row">
        <h3>Due @Model.DueDate.ToShortDateString() @Model.DueDate.ToShortTimeString()</h3>
    </div>
</div>
