@model Validation.RegistrationFormModel

<h1>Registration</h1>
<div>

</div>
<form asp-action="" asp-controller="Registration" method="post">
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class=form-control/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group col-12 col-sm-6">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control"/>
        <span asp-validation-for="EmailAddress"></span>
        
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber"></span>
        
    </div>
    
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control"/>
        
    </div>
    <div class="row">
        <div class="form-group col-12 col-sm-4">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control"/>
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="State"></label>
            <select asp-for="State" asp-items="Model.StateList" class="form-select">
            </select>
            
        </div>
        <div class="form-group col-12 col-sm-4">
            <label asp-for="ZipCode">Zip Code</label>
            <input asp-for="ZipCode" class="form-control"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>